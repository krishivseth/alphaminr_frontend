{
    "version": 2,
    "builds": [
      {
        "src": "editor_portal.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
      },
      {
        "src": "templates/**",
        "use": "@vercel/static"
      },
      {
        "src": "static/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      { "src": "/static/(.*)", "dest": "/static/$1" },
      { "src": "/templates/(.*)", "dest": "/templates/$1" },
      { "handle": "filesystem" },
      { "src": "/(.*)", "dest": "editor_portal.py" }
    ],
    "env": {
      "RAILWAY_BACKEND_URL": "@railway_backend_url"
    }
}
